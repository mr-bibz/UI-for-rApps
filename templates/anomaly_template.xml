<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<template>
  <groupId>33333333-3333-3333-3333-333333333333</groupId>
  <name>anomaly_template</name>
  <description>Template for Anomaly Detection ML Pipeline</description>
  <snippet>
    <processGroups/>
    <processors>
      <processor>
        <id>anomaly-proc-1</id>
        <name>ExecuteScript</name>
        <type>org.apache.nifi.processors.script.ExecuteScript</type>
        <bundle>
          <group>org.apache.nifi</group>
          <artifact>nifi-standard-processors</artifact>
          <version>1.12.1</version>
        </bundle>
        <position>
          <x>200.0</x>
          <y>200.0</y>
        </position>
        <config>
          <properties>
            <entry>
              <key>Script Engine</key>
              <value>python</value>
            </entry>
            <entry>
              <key>Script Body</key>
              <value>
import sys
print("Anomaly detection executed!")
              </value>
            </entry>
          </properties>
          <schedulingPeriod>1.5 sec</schedulingPeriod>
          <penaltyDuration>30 sec</penaltyDuration>
          <yieldDuration>1 sec</yieldDuration>
          <bulletinLevel>WARN</bulletinLevel>
          <schedulingStrategy>TIMER_DRIVEN</schedulingStrategy>
          <executionNode>ALL</executionNode>
        </config>
      </processor>
      <processor>
        <id>anomaly-proc-2</id>
        <name>PutFile</name>
        <type>org.apache.nifi.processors.standard.PutFile</type>
        <bundle>
          <group>org.apache.nifi</group>
          <artifact>nifi-standard-processors</artifact>
          <version>1.12.1</version>
        </bundle>
        <position>
          <x>500.0</x>
          <y>200.0</y>
        </position>
        <config>
          <properties>
            <entry>
              <key>Directory</key>
              <value>/tmp/anomaly</value>
            </entry>
          </properties>
          <schedulingPeriod>0 sec</schedulingPeriod>
          <penaltyDuration>30 sec</penaltyDuration>
          <yieldDuration>1 sec</yieldDuration>
          <bulletinLevel>WARN</bulletinLevel>
          <schedulingStrategy>TIMER_DRIVEN</schedulingStrategy>
          <executionNode>ALL</executionNode>
        </config>
      </processor>
    </processors>
    <connections>
      <connection>
        <id>anomaly-conn-1</id>
        <sourceId>anomaly-proc-1</sourceId>
        <destinationId>anomaly-proc-2</destinationId>
        <name>Connection from ExecuteScript to PutFile</name>
        <flowFileExpiration>0 sec</flowFileExpiration>
        <backPressureObjectThreshold>8000</backPressureObjectThreshold>
        <backPressureDataSizeThreshold>750 MB</backPressureDataSizeThreshold>
      </connection>
    </connections>
    <inputPorts/>
    <outputPorts/>
  </snippet>
  <timestamp>1670000002000</timestamp>
</template>